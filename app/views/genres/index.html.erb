<h1>
    <!-- Genres -->
    <%= t('welcome.genres') %>
</h1>
<br>
<% if user_signed_in?&&current_user.admin? %>
        <%= link_to t('genre.add_genre'), new_admin_genre_path, class: "btn btn-outline-primary" %>
        <!-- 'Add new genre' -->
<% end %>
<div class="container">
      <table class="table">
  <thead>
    <tr>
      <!-- <th> <%=t('activerecord.attributes.genre.genre_name') %></th> -->
      <!-- Genre -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.genre_name, genre %></td>
        <td><%= link_to t('action.show'), genre %></td>
        <!-- 'More' -->
        <% if user_signed_in?&&current_user.admin? %>
                <td><%= link_to t('action.edit'), edit_admin_genre_path(genre) %></td>
                <!-- 'Edit' -->
                <td><%= link_to t('action.destroy'), admin_genre_path(genre), method: :delete, data: { confirm: t('action.are_you_sure') } %></td>
                <!-- 'Are you sure?' -->
                <!-- 'Destroy' -->
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>  
</div>


<br>


<%= link_to t('common.back'), root_path, class: "btn btn-secondary" %>
