
<%= form_with(model: [:admin, book], html:{multipart: true}, remote: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<!-- <div class= "form-group"> -->
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title, placeholder: "Title of the book" , class: "form-control line_select" %>
  </div>
  <div class="form-group add_file_style">
    <%#= form.label :image %>
     <%#= form.file_field :image, id: :book_image %> 
  </div>

  <div class="form-group">
   <%= form.file_field :image, id: :book_image, 'data-placeholder':"No file",'data-buttonBefore':"true",'data-text':"Add image",'data-btnClass':"btn-primary", class: "filestyle" %>  
   <!-- <input type="file" class="filestyle" data-btnClass="btn-primary"> -->
  </div>
  
  <div class="form-group">
    <%= form.label :language %>
    <%= form.select(:language, [['русский'], ['английский']],{}, {:class => 'form-control line_select'})%>   
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :book_description, placeholder: "Book's brief description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <p class="text-muted">Please select the user who brought the book</p>
    <%= form.collection_select(:user_id, User.all, :id, :name_with_initial ,{}, class: 'form-control line_select') %>
    <%#= form.collection_select(:user_id, User.all, :id, :name) %>
  </div>



  <div class="form-group">
    <%#= form.label :author_id %>
    <%#= form.select(:author_id, Author.all.collect {|p| [ p.name+" "+p.surname, p.id ] } + [ ['add new author', 'new']],{},{:onchange => "newAuthor();", class: "form-control line_select"}) %>    
  </div>



  <div class="form-group" >
        <%= form.label :author_id %>
        <div id="author_area">
            <%= form.select(:author_id, Author.all.collect {|p| [ p.name+" "+p.surname, p.id]} + [ ['add new author', 'new']],{:selected =>Author.last.id.to_i}, {:onchange => "newAuthor();", id: 'author_select', class: "form-control line_select", data: {remote: true, url: url_for( action: 'new_author_at_book', controller: '/admin/authors')}}) %>  
        </div>
  </div>


  <div class="form-group">
    <%= form.label :genre_id %>
    <div id="genre_area">
        <%= form.select(:genre_id, Genre.all.collect {|p| [ p.genre_name, p.id ] } + [ ['add new genre', 'new']],{:selected =>Genre.last.id.to_i},{:onchange => "newGenre();", id: 'genre_select', id: 'genre_select', class: 'form-control line_select', data: {remote: true, url: url_for( action: 'new_genre_at_book', controller: '/admin/genres')}}) %>  
    </div>
    
    <%#= form.collection_select(:genre_id, Genre.all, :id, :genre_name) %>
  </div>



  <div class="form-group">
    <%= form.label :location_id %>
    <%#= form.collection_select(:location_id, Location.all, :id, :name) %>
    <%= form.select(:location_id, Location.all.collect {|p| [ p.name, p.id ] } + [ ['add new location', 'new']],{},{:onchange => "newLocation();",class:'form-control line_select'}) %>
  </div>
  <!-- <div class="field"> -->
    <%#= form.label :rating %>
    <%#= form.text_field :rating, id: :book_rating %>
  <!-- </div> -->
  <div class="form-group">

    <%= form.label :holder_id %>
    <p class="text-muted">This field indicates the user who took the book from the location. If the book in the location now, select:<b> no holder</b></p>
    <%= form.collection_select(:holder_id, User.all, :id, :name_with_initial, {include_blank: 'no holder'}, {:class=>"form-control line_select"}) %>
    <%#= form.collection_select(:user_id, User.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= form.submit class:'btn btn-primary'%>
    <%= link_to 'Back', :back, class:'btn btn-secondary'%>
  </div>
<% end %>
