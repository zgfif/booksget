<p id="notice"><%= notice %></p>

<h1>Genres</h1>
<% if user_signed_in?&&current_user.admin? %>
        <%= link_to 'Add new genre', new_admin_genre_path, class: "btn btn-outline-primary" %>
<% end %>
<div class="container">
      <table class="table">
  <thead>
    <tr>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_name %></td>
        <td><%= link_to 'More', genre %></td>
        <% if user_signed_in?&&current_user.admin? %>
                <td><%= link_to 'Edit', edit_admin_genre_path(genre) %></td>
                <td><%= link_to 'Destroy', admin_genre_path(genre), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>  
</div>


<br>


<%= link_to 'Back', root_path, class: "btn btn-secondary" %>
