              <%= link_to 'Home', root_path %>
              <%= link_to 'Back', :back %>
          </div>
      <% end %> 
          
 -->     
    
      <p class="notice "><%= notice %> </p>
      <p class="alert" ><%= alert %></p>   
    
    <div class="container floating">
      
         <%= yield %>
    </div>
     
    <footer class="floating"  >
           <span><a href="http://github.com/zgfif/example3">Booksget</a> 2017 </span> 
      <span><%= link_to 'About us', about_path %>  </span>
       
        <!-- Coded by: Pavel Bratanov -->
      <span> <%= link_to 'Contacts', contact_path %> </span>
      <span><%= link_to 'Our team', our_team_path %>  </span>       
       <span><%= link_to 'Rules', rule_path %></span> 
      
    </footer>

