<%= form_with(model: [:admin, location], html:{multipart: true}, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%#= form.label :image %>
    <%#= form.file_field :picture, id: :location_picture, class: "form-control-file" %>
  </div>
  <div class="form-group">
   <%= form.file_field :picture, id: :location_image, 'data-placeholder':"No file",'data-buttonBefore':"true",'data-text':"Add image",'data-btnClass':"btn-primary", class: "filestyle" %>  
   <!-- <input type="file" class="filestyle" data-btnClass="btn-primary"> -->
  </div>
  
<div class="form-row">
        <div class="form-group col-md-6">
          <%= form.label :name %>
          <%= form.text_field :name, id: :location_name, placeholder: "Location's name", class: "form-control" %>
        </div>

        <div class="form-group col-md-6">
          <%= form.label :address %>
          <%= form.text_area :address, id: :location_address, placeholder: "Full address of location(city, street, zip, etc)", class: "form-control" %>
        </div>
</div>
  

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :location_description, placeholder: "Usefull information about location" , class: "form-control" %>
  </div>

<div class="form-row">
    <div class="form-group col-md-6">
    <%= form.label :email %>
    <%= form.text_field :email, id: :location_email, placeholder: "e-mail" ,class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :telephone %>
    <%= form.text_field :telephone, id: :location_telephone, placeholder: "phone number", class: "form-control" %>
  </div>


</div>
  
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
