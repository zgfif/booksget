<p id="notice"><%= notice %></p>

<h1>
    <!-- Users -->
    <%= t('welcome.users') %>
</h1>
<br>
    <%= link_to t('user.add_user'), new_admin_user_path, class: "btn btn-outline-primary" %>
    <!-- 'New User' -->
<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>
              <%= t('activerecord.attributes.user.name') %>
              <!-- Name -->
          </th>
          <th>
               <!-- Surname -->
               <%= t('activerecord.attributes.user.surname') %>
          </th>
          <th>
              <%= t('activerecord.attributes.user.phone') %>
              <!-- Phone -->
            </th>
          <th>
            <!-- e-mail -->
            <%= t('activerecord.attributes.user.email') %>
          </th>

          <th>
            <!-- Balance -->
            <%= t('activerecord.attributes.user.balance') %>
          </th>
          <th>
              <!-- Added -->
              <%= t('activerecord.attributes.user.added') %>
          </th>
          <th>
              <!-- Held -->
              <%= t('activerecord.attributes.user.held') %>
          </th>
          <th>
              <!-- Admin -->
              <%= t('activerecord.attributes.user.admin') %>
          </th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.surname %></td>
            <td><%= user.phone %></td>
            <td><%= user.email %></td>
            <td><%= user.balance %></td>
            <td><%= user.added %></td>
            <td><%= user.held %></td>
            <td><%= user.admin %></td>
            <td><%= link_to t('action.show'), admin_user_path(user) %></td>
            <!-- 'Show' -->
                <td><%= link_to t('action.edit'), edit_admin_user_path(user) %></td>
                <!-- 'Edit' -->
                <td><%= link_to t('action.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('action.are_you_sure') } %></td>
                <!-- 'Destroy' -->
                <!-- 'Are you sure?' -->
          </tr>
        <% end %>
      </tbody>
</table>  
</div>


<br>


<%= link_to t('common.back'), root_path, class: "btn btn-secondary"%>
