<p id="notice"><%= notice %></p>

<h1>
  <!-- Locations -->
  <%= t('welcome.locations') %>
</h1>
<br>
 <% if user_signed_in?&&current_user.admin? %>
    <%= link_to t('location.add_location'), new_admin_location_path, class: "btn btn-outline-primary" %>
    <!-- 'Add new location' -->
 <% end %>
<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.location.name') %></th>
          <!-- Name -->
          <th><%= t('activerecord.attributes.location.address') %></th>
          <!-- Address -->
          <th><%= t('activerecord.attributes.location.description') %></th>
          <!-- Description -->
          <th><%= t('activerecord.attributes.location.email') %></th>
          <!-- e-mail -->
          <th><%= t('activerecord.attributes.location.telephone') %></th>
          <!-- Telephone -->
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= location.name %></td>
            <td><%= location.address %></td>
            <td><%= location.description %></td>
            <td><%= location.email %></td>
            <td><%= location.telephone %></td>
            <td><%= link_to t('action.show'), location %></td>
            <!-- 'Show' -->
            <% if user_signed_in?&&current_user.admin? %>
                  <td><%= link_to t('action.edit'), edit_admin_location_path(location) %></td>
                  <!-- 'Edit' -->
                  <td><%= link_to t('action.destroy'), admin_location_path(location), method: :delete, data: { confirm: t('action.are_you_sure') } %></td>
                  <!-- 'Destroy' -->
                  <!-- 'Are you sure?' -->
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>  
    
</div>
<div><%= link_to t('common.back'), root_path, class: "btn btn-secondary" %>  </div>
<!-- 'Back' -->
        





    


