<p id="notice"><%= notice %></p>

<h1>Locations</h1>
 <% if user_signed_in? %>
    <%= link_to 'Add new location', new_admin_location_path, class: "btn btn-outline-primary" %>
 <% end %>
<div class="container">
      <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>e-mail</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
        <td><%= location.description %></td>
        <td><%= location.email %></td>
        <td><%= location.telephone %></td>
        <td><%= link_to 'Show', location %></td>
        <% if user_signed_in? %>
              <td><%= link_to 'Edit', edit_admin_location_path(location) %></td>
              <td><%= link_to 'Destroy', admin_location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>  
</div>


<br>


<%= link_to 'Back', root_path, class: "btn btn-secondary" %>
